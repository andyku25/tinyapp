<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success justify-content-between">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(username) { %>
        <div style="margin-right: 1em;">Login in As: <%= username %></div>
        <form action="/logout" method="POST" class="form-inline">
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
      <% } else { %>
        <form action="/login" method="POST" class="form-inline">
          <input class="form-control" type="text" name="username" placeholder="Username" style="margin-right: 1em;">
          <button type="submit" class="btn btn-outline-dark">Login</button>
        </form>
      <% } %>
    </div>
  </nav>

</header>