<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success justify-content-between">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href= <%= (userID) ? "/urls/new" : "/login" %>>Create New URL</a>
      </div>
      <% if(userID) { %>
        <div style="margin-right: 1em;">Login in As: <%= users[userID].email %></div>
        <form action="/logout" method="POST" class="form-inline">
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
      <% } else { %>
        <div class="btn-group">
          <button class="btn btn-dark downdrop-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Account
          </button>
          <div class="dropdown-menu dropdown-menu-right">
            <a href="/login" class="dropdown-item">Login</a>
            <a href="/register" class="dropdown-item">Register</a>
          </div>
        </div>
      <% } %>
    </div>
  </nav>

</header>